CREATE TABLE users(
	user_id int(11) not null PRIMARY KEY AUTO_INCREMENT,
    user_email varchar(256) not null,
    user_pseudo varchar(256) not null,
    user_password varchar(256) not null,
    user_confirmed tinyint(1)  not null
);

CREATE TABLE comentaires(
    coment_id int(11) not null PRIMARY KEY AUTO_INCREMENT,
    coment_page varchar(256) not null,
    coment_origine varchar(256) not null,
    coment_contenue varchar(2000) not null,
    coment_createur varchar(2000) not null,
    coment_date datetime not null
);

CREATE TABLE likes(
    like_id int(11) not null PRIMARY KEY AUTO_INCREMENT,
    like_page varchar(256) not null,
    like_number int(11)
);